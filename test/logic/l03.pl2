математические начала

meta sourse="pl2"
    context logical
    {@
        unit Formula
        {*  
            logical operator ! (logical arg1)
               ::= (logical) ( ! (bool) arg1 )
            {&
            &}

            logical operator && (logical arg1, logical arg2)
               ::= (logical) ( ((bool) arg1) && ((bool) arg2))
            {&
            &}

            logical operator || (logical arg1, logical arg2)
               ::= (logical) ( ((bool) arg1) || ((bool) arg2))
            {&
            &}

            logical operator => (logical arg1, logical arg2)
               ::= ! ((! arg2) && arg1)
            {&
            &}


        *}
    @}
/meta